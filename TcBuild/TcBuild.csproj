<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <OutputPath>bin\</OutputPath>
    <Description>Tool to build Total Commander Plugins</Description>
    <!--<DevelopmentDependency>true</DevelopmentDependency>-->

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Reflection.MetadataLoadContext" Version="5.0.0" PrivateAssets="All" GeneratePathProperty="true" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.0-beta-20204-02" PrivateAssets="All" />
    <PackageReference Include="Microsoft.Build.Tasks.Core" Version="16.8.0" PrivateAssets="All" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\TcBuildGenerator\TcBuildGenerator.csproj" PrivateAssets="All" />
    <ProjectReference Include="..\TcPluginBase\TcPluginBase.csproj" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <Content Update=".\build\*" Pack="true"
             PackagePath="build"
             Visible="true" />

    <None Include="$(OutputPath)\TcBuildGenerator.*" Pack="true"
          PackagePath="analyzers\dotnet\cs"
          Visible="false" />

    <None Include=".\..\TcPluginBase\bin\TcPluginBase.*" Pack="true"
          PackagePath="lib\$(TargetFramework)"
          Visible="false" />

    <None Include="$(OutputPath)\*.*" Pack="true"
          PackagePath="bin\$(TargetFramework)"
          Visible="false" />

    <None Include="$(PkgSystem_Reflection_MetadataLoadContext)\lib\netstandard2.0\*" Pack="true"
          PackagePath="bin\$(TargetFramework)"
          Visible="false" />

  </ItemGroup>

</Project>